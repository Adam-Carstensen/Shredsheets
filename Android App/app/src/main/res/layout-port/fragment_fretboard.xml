<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <revert.shredsheets.views.keySlider.KeySliderView
        android:id="@+id/fretboardKeySlider"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_weight="0.7" />

    <revert.shredsheets.views.fretboard.runner.RunnerView
        android:id="@+id/fretboardTopRunner" android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight=".6" />

    <revert.shredsheets.views.fretboard.FretboardView
        android:id="@+id/fretboardView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        app:key="C" />

    <revert.shredsheets.views.fretboard.runner.RunnerView
        android:id="@+id/fretboardBottomRunner" android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_weight=".6" />

    <revert.shredsheets.views.details.NotesAndIntervalsView
        android:layout_width="match_parent"
        android:layout_height="0dp" android:layout_gravity="center_vertical" android:layout_marginLeft="5dp"
        android:id="@+id/notesAndIntervalsView" android:layout_weight="2" />

    <revert.shredsheets.views.details.SelectedKeyView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/selectedKeyView" android:layout_weight="3"/>


</LinearLayout>