                    android:text="B" />

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" android:layout_weight="1">

        <LinearLayout
            android:id="@+id/commonTuningsLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/tuning_button_eadgbe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Standard \n(E A D G B e)" />

            <Button
                android:id="@+id/tuning_button_gCEA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ukulele Standard \n(g C E A)" />

            <Button
                android:id="@+id/tuning_button_EBEADGBe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8 String Alternate \n(E B E A D G B e)" />

            <Button
                android:id="@+id/tuning_button_BEADG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5 String Bass \n(B E A D G)" />


            <!--TODO: Redesign tuning fragment to be more string count specific, or incorporate actual instrument models-->

            <Button
                android:id="@+id/tuning_button_dropD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onDropDClicked"
                android:text="Dropped D \n(D A D G B e)" />

            <Button
                android:id="@+id/tuning_button_newStandard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onNewStandardTuningClicked"
                android:text="New Standard \n(C G D A E g)" />

            <Button
                android:id="@+id/tuning_button_openC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open C \n(C G C G C e)" />

            <Button
                android:id="@+id/tuning_button_openD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open D \n(D A D F# A d)" />

            <Button
                android:id="@+id/tuning_button_openE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open E \n(E B E G# B e)" />

            <Button
                android:id="@+id/tuning_button_openF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open F \n(C F C F A f)" />

            <Button
                android:id="@+id/tuning_button_openG"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open G \n(D G D G B d)" />

            <Button
                android:id="@+id/tuning_button_openA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open A \n(E A C# E A e)" />

            <Button
                android:id="@+id/tuning_button_openB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Open B \n(B F# B F# B D#)" />




        </LinearLayout>
    </ScrollView>


</LinearLayout>