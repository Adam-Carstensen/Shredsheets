                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2nd string" />

                <Button
                    android:id="@+id/tuning_string_button_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="B" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_3" android:tag="tuning_string_layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/tuning_string_label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3rd string" />

                <Button
                    android:id="@+id/tuning_string_button_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="G" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_4" android:tag="tuning_string_layout_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/tuning_string_label_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4th string" />

                <Button
                    android:id="@+id/tuning_string_button_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="D" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_5" android:tag="tuning_string_layout_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/tuning_string_label_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5th string" />

                <Button android:id="@+id/tuning_string_button_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="A" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_6" android:tag="tuning_string_layout_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView android:id="@+id/tuning_string_label_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6th string" />

                <Button android:id="@+id/tuning_string_button_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="E" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_7" android:tag="tuning_string_layout_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="7th string" />

                <Button android:id="@+id/tuning_string_button_7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="B" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_8" android:tag="tuning_string_layout_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8th string" />

                <Button android:id="@+id/tuning_string_button_8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="G" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_9" android:tag="tuning_string_layout_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="9th string" />

                <Button android:id="@+id/tuning_string_button_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="D" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_10" android:tag="tuning_string_layout_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10th string" />

                <Button android:id="@+id/tuning_string_button_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="A" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_11" android:tag="tuning_string_layout_11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11th string" />

                <Button android:id="@+id/tuning_string_button_11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onFirstStringClicked"
                    android:text="E" />

            </LinearLayout>

            <LinearLayout android:id="@+id/tuning_string_layout_12" android:tag="tuning_string_layout_12"
                android:layout_width="wrap_content"
