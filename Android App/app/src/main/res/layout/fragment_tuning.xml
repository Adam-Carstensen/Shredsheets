    android:layout_height="fill_parent"
    android:orientation="horizontal">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent" android:layout_weight="1">

        <LinearLayout
            android:id="@+id/tuning_string_LayoutContainer"
